<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:padding="10dp"
    android:elevation="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:id="@+id/cellbannerMainImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-1dp"

            android:src="@drawable/recetaholder" />

        <TextView
            android:id="@+id/cellbannertitleTV"
            style="@style/Base.Widget.MaterialComponents.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cellbannerMainImg"
            android:text="Paella Valenciana by Eline Heighs "
            android:textColor="@color/negro"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cellbannerSubTitleTV"
                android:text="Este es el subtitulo del banner"
                android:layout_marginLeft="10dp"
                android:textColor="@color/negro"
                android:layout_below="@+id/cellbannertitleTV"
                />









    </RelativeLayout>


</androidx.cardview.widget.CardView>
