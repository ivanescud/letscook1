<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.ProfileActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/loginbutpress"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/loginbutpress"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileUserImgCIV"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/profileplaceholder" />


            <TextView
                android:id="@+id/profileUserNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Carla Lopez"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/profileUserNationTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panama"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F2F2F2"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/profileChetTypeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Chef Novato"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 recetas"
                   android:id="@+id/profileAmounReceTV"

                    android:textAlignment="center"
                    android:textColor="@color/loginbut"
                    android:textSize="20sp"

                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profilePagerVP"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>

</ScrollView>