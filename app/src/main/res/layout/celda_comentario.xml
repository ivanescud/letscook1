<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/celdaComentarioPerfilCV"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profileplaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celdaComentarioNombreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="@string/text_default"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/celdaComentarioPerfilCV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celdaComentarioComentarioTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="10dp"
        android:paddingStart="65dp"
        android:text="@string/text_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/celdaComentarioPerfilCV"
        app:layout_constraintTop_toBottomOf="@+id/celdaComentarioNombreTV" />
</androidx.constraintlayout.widget.ConstraintLayout>
