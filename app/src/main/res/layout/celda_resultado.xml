<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="100dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/celdaResultadoIMG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/Imagen"
        android:scaleType="centerCrop"
        android:src="@drawable/recetalist" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:background="@color/negro_translucido"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/celdaResultadoTItleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_default"
            android:textColor="@color/light_blanco_detail"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/celdaResultadoTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/text_default"
            android:textColor="@color/light_blanco_detail"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
