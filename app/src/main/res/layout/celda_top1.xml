<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="250dp"
    app:cardElevation="5dp"
    app:optRoundCardCornerRadius="20dp">

    <ImageView
        android:id="@+id/celdaTop1PlaceHolderIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/platillo_ejemplo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/light_blanco_detail">

        <TextView
            android:id="@+id/celdaTop1NombreRecetaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/baskervville_regular"
            android:gravity="center"
            android:text="Salmon ahumado con limon"
            android:textColor="#262226"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/celdatop1Top1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/baskervville_regular"
            android:text="Top 1"
            android:textColor="#262226"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_star_border_black_24dp" />

        <TextView
            android:id="@+id/celdaTop1RankingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="9dp"
            android:text="4.5"
            android:textColor="#000000" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>